@model CreateStudentCommands
@{
    ViewData["Title"] = "AddStudent";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<h1>Öğrenci Ekle</h1>

<div class="container">
    <form method="post">
        <br />
        <label>Öğrenci Adı</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Öğrenci Soyadı</label>
        <input type="text" asp-for="Surname" class="form-control" />
        <br />
        <label>Öğrenci Yaşı</label>
        <input type="text" asp-for="Age" class="form-control" />
        <br />
        <label>Öğrenci Şehri</label>
        <input type="text" asp-for="City" class="form-control" />
        <button  class="btn btn-outline-success"> Öğrenciyi Ekle</button>
    </form>
</div>

