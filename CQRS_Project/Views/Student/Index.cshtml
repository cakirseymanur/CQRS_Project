@model List<GetAllStudentQueryResult>
@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <h2>Öğrenci Listesi</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Öğrenci Adı</th>
            <th>Öğrenci Soyadı</th>
            <th>Şehir</th>
            <th>Bölüm</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentID</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.City</td>
                <td>@item.Department</td>
                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="#" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/Student/AddStudent" class="btn btn-outline-success">Yeni Öğrenci Kayıt</a>
</div>
