@model List<GetAllUniversityQueryResult>
@{
    ViewData["Title"] = "Index";
}

<
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <h2>Üniversite Listesi</h2>
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Üniversite</th>
            <th>Şehir</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UniversityID</td>
                <td>@item.Name</td>
                <td>@item.Town</td>
                <td><a href="/University/DeleteUniversity/@item.UniversityID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/University/UpdateUniversity/@item.UniversityID" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }
    </table>
    <br />
    <a href="/University/AddUniversity" class="btn btn-outline-success">Yeni Üniversite Kayıt</a>
</div>